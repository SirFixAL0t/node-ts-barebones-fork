{
  "name": "node-ts-barebones",
  "version": "0.0.1",
  "description": "Barebones NodeJS setup with TypeScript, Jest, TSLint and Prettier",
  "author": "Tiago Pina - <tiagoaspina@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && tsc",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "tests": "jest",
    "tests:watch": "jest --watch",
    "tests:cov": "jest --coverage",
    "tests:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
  },
  "keywords": [
    "node",
    "typescript",
    "jest",
    "prettier"
  ],
  "dependencies": {
    "dotenv": "^6.2.0",
    "pretty-error": "^2.1.1",
    "rimraf": "^2.6.3",
    "winston": "^3.1.0",
    "winston-daily-rotate-file": "^3.6.0"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.0",
    "@types/jest": "^23.3.13",
    "@types/node": "^10.12.18",
    "chalk": "^2.4.2",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0",
    "typescript": "^3.2.4"
  },
  "lint-staged": {
    "{src,tests}/**/*.{ts,js,json}": [
      "prettier --config .prettierrc --write './src/**/*.ts'",
      "tslint -p tsconfig.json -c tslint.json",
      "npm run tests",
      "git add"
    ]
  }
}
